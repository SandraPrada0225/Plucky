<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#12273a"
        app:cardUseCompatPadding="true"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="10dp"
        android:elevation="2dp"
        app:contentPadding="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">



        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mensajes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/nombreMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombreJugador"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/mensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/correoJugador"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/imagenEnviar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="nubecita3.json"
                    app:lottie_imageAssetsFolder="assets"
                    app:lottie_loop="true" />
            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.cardview.widget.CardView>
