<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#69BCB6"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:elevation="2dp"
    app:contentPadding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/solicitudes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/imagenSolicitud"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/espada" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            >

            <TextView
                android:id="@+id/nombreEmisorSolicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombreJugador"
                android:textColor="#000000"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/solicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correoJugador"
                android:textColor="#000000"
                android:textSize="20sp"
                />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.cardview.widget.CardView
            android:id="@+id/aceptarSolicitud"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:elevation="2dp"
            app:contentPadding="5dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correoJugador"
                android:textColor="#000000"
                android:textSize="20sp"
                />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/rechazarSolicitud"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/appbar_padding"
            android:layout_marginTop="5dp"
            android:src="@drawable/xbutton" />



    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>