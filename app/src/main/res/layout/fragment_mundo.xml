<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/primerfondo"
    tools:context=".ui.mundo.MundoFragment">

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/idGridMundo1"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        app:columnCount="3"
        app:rowCount="1"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardNivel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#69BCB6"
            android:foreground="?selectableItemBackground"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="#96ACD9"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/espadita" />

                <TextView
                    android:id="@+id/nivelMundo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#DFE7F1"
                    android:textSize="15sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMonedas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#69BCB6"
            android:foreground="?selectableItemBackground"

            >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:foreground="?selectableItemBackground"
            app:cardBackgroundColor="#96ACD9"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/money" />

                <TextView
                    android:id="@+id/monedasMundo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#DFE7F1"
                    android:textSize="15sp" />



            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
            android:id="@+id/cardGemas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#69BCB6"
            android:foreground="?selectableItemBackground"

            >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:foreground="?selectableItemBackground"
            app:cardBackgroundColor="#96ACD9"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/diamond" />

            <TextView
                android:id="@+id/gemasMundo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#DFE7F1"
                android:textSize="16sp" />



        </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>



      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
          <androidx.cardview.widget.CardView
              android:layout_width="200dp"
              android:layout_height="80dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginBottom="10dp"
              android:foreground="?selectableItemBackground"
              app:cardBackgroundColor="#E8AE41"
              app:cardCornerRadius="8dp"
              app:cardElevation="6dp"
              app:layout_columnWeight="1"
              app:layout_rowWeight="1"
              >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardJugador"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal|center"
            android:foreground="?selectableItemBackground"
            app:cardBackgroundColor="#96ACD9"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"


            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagenPerfilMundo"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#96ACD9"
                    android:src="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/jugadorMundo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#96ACD9"
                    android:gravity="center"
                    android:textColor="#D3DBE6"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#96ACD9"
                    android:src="@drawable/trofeo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#96ACD9"
                    android:gravity="center"
                    android:text="Hola"
                    android:textColor="#D3DBE6"
                    android:textSize="15sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
          </androidx.cardview.widget.CardView>


          <androidx.cardview.widget.CardView
              android:layout_width="55dp"
              android:layout_height="55dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginBottom="10dp"
              android:foreground="?selectableItemBackground"
              app:cardBackgroundColor="#E8AE41"
              app:cardCornerRadius="8dp"
              app:cardElevation="6dp"
              app:layout_columnWeight="1"
              app:layout_rowWeight="1"
              >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardJugadores"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:foreground="?selectableItemBackground"
            app:cardBackgroundColor="#96ACD9"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="#96ACD9"
                android:src="@drawable/robotic" />

        </androidx.cardview.widget.CardView>
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:layout_width="55dp"
              android:layout_height="55dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginBottom="10dp"
              android:foreground="?selectableItemBackground"
              app:cardBackgroundColor="#E8AE41"
              app:cardCornerRadius="8dp"
              app:cardElevation="6dp"
              app:layout_columnWeight="1"
              app:layout_rowWeight="1"
              >


        <androidx.cardview.widget.CardView
            android:id="@+id/cardAjustes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:foreground="?selectableItemBackground"
            app:cardBackgroundColor="#96ACD9"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:layout_gravity="center_horizontal|center_vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cheeseburger" />

        </androidx.cardview.widget.CardView>
          </androidx.cardview.widget.CardView>
      </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="300dp"

       >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="circle.json"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_loop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:layout_marginTop="100dp"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/compu1"
            tools:ignore="MissingConstraints" />






    </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>




    <androidx.cardview.widget.CardView
        android:id="@+id/juegoMundo"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="#E8AE41"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_gravity="center_vertical|center_horizontal"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="#F2BD1D"
            android:src="@drawable/avatar3" />

    </androidx.cardview.widget.CardView>


</LinearLayout>

</FrameLayout>